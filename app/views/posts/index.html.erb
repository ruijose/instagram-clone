<% @posts.each do |post| %>
  <div class="thumbnail">
    <div class="row">
      <div class="col-md-1">
        <div class="image-circle2">
          <%= image_tag User.find(post.user_id).avatar.url(:medium) %> 
        </div>
      </div>
      <div class="col-sm-6" id="name-on-post">
        <%= link_to User.find(post.user_id).email.split("@")[0], User.find(post.user_id) %>
      </div>
    </div>
    <%= image_tag post.image.url(:medium) %>
    <div id="like">
      <%= render 'likes/like_buttom', object: post %></li>
    </div>
    <div class="actionBox">
      <%= form_for [post, Comment.new], :html => { :class => 'form-inline' } do |f| %>
        <div class="form-group">
          <%= f.text_field :body, placeholder: 'your comment...', class: "form-control", id: "test" %>
        </div>
        <%= f.submit "Add", class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>


